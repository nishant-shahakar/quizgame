<!DOCTYPE html>
<html lang="en">
<head>
  <title>Quiz</title>
  <meta charset="utf-8">
<link class="cssdeck" rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.1/css/bootstrap.min.css">
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.1/css/bootstrap-responsive.min.css" class="cssdeck">
<script src="bower_components/angular/angular.min.js"></script>
<script src="controllers/logReg.js"></script>

</head>

<body ng-app="logReg">
<div class="container" ng-controller="signup"> 
<div class="" id="loginModal">
	<div class="modal-header">
		<h3>Have an Account?</h3>
	</div>
	<div class="modal-body">
		<div class="well">
			<ul class="nav nav-tabs">
				<li class="active"><a href="#login" data-toggle="tab">Login</a></li>
				<li><a href="#create" data-toggle="tab">Create Account</a></li>
			</ul>
			<div id="myTabContent" class="tab-content">
				<div class="tab-pane active in" id="login">
					<form class="form-horizontal" name="loginform">
						<fieldset>
							<div id="legend">
								<legend class="">Login</legend>
							</div>    
							<div class="control-group">
								<!-- Username -->
								<label class="control-label"  for="username" >Username</label>
								<div class="controls">
									<input type="text" id="username" name="username" placeholder="" class="input-xlarge" ng-model="lusername" required>
								</div>
							</div>
							
							<div class="control-group">
								<!-- Password-->
								<label class="control-label" for="password">Password</label>
								<div class="controls">
									<input type="password" id="password" name="password" placeholder="" class="input-xlarge" ng-model="lpassword" required>
								</div>
							</div>
							
							
							<div class="control-group">
								<!-- Button -->
								<div class="controls">
									<button class="btn btn-success" ng-disabled="loginform.$invalid" ng-click="login()">Login</button>
								</div>
							</div>
						</fieldset>
					</form>                
				</div>
				<div class="tab-pane fade" id="create">
					<form id="tab" name="registerForm">
						<label>Username</label>
						<input type="text" name="username" value="" class="input-xlarge" ng-model="username" required>
						<label>Full Name</label>
						<input type="text" name="fullname" value="" class="input-xlarge" ng-model="fullname" required>
						<label>Email</label>
						<input type="email" name="email" value="" class="input-xlarge" ng-model="email" required>
						<label>Password</label>
						<input type="password" name="password" value="" class="input-xlarge" ng-model="password" required>
						
						<div>
							<button class="btn btn-primary" ng-disabled="registerForm.$invalid" ng-click="register()">Create Account</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>	
</body>
<script class="cssdeck" src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script class="cssdeck" src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.1/js/bootstrap.min.js"></script>